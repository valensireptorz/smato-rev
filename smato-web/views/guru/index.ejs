<%- include('../partials/_head.ejs') %>

<%- include('../partials/_nav.ejs') %>
          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->
            <%- include('../partials/_message.ejs') %>
            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Tables /</span> guru</h4>

              <!-- Basic Bootstrap Table -->
              <div class="card">
                <h5 class="card-header">Tabel Guru 👨🏻‍🏫👩🏻‍🏫</h5>
                <div class="table-responsive text-nowrap">
                  <% if (level == "admin") {%>
                    <div class="mt-3 px-3">
                        <a href="/guru/create" class="btn btn-sm btn-primary">Tambah</a>
                        </div>
                        <% } %>
                  <table class="table">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Nama guru</th>
                        <th>NIP</th>
                        <% if (level == "admin") {%>
                        <th>Actions</th>
                        <% } %>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        <% for(var i = 0; i < data.length; i++){ %>
                      <tr>
                        <th scope="row"><%= (i+1) %></th>
                        <td><%= data[i].nama_guru %></td>
                        <td><%= data[i].nip %></td>
                        <% if (level == "admin") {%>
                        <td>
                          <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                              <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                              <a class="dropdown-item" href="/guru/edit/<%= data[i].id_guru %>""
                                ><i class="bx bx-edit-alt me-1"></i> Edit</a
                              >
                              <a class="dropdown-item" href="/guru/delete/<%= data[i].id_guru %>""
                                ><i class="bx bx-trash me-1"></i> Delete</a
                              >
                            </div>
                          </div>
                        </td>
                        <% } %>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Basic Bootstrap Table -->
              <%- include('../partials/_foot.ejs') %>
