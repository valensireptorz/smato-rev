<%- include('../partials/_head.ejs') %>

    <div class="content-wrapper">
  <!-- Content -->
  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Upload Tugas</h4>

    <!-- Parent Row -->
    <div class="row">
      <!-- Left Section -->
      <div class="col-md-6">
        <div class="card mb-4">
          <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Tugas</h5>
            <small class="text-muted float-end"></small>
          </div>
          <!-- Basic Bootstrap Table -->
          <div class="readUpdate">
            <div class="d-flex flex-wrap">
              <div class="card mb-4 mx-2" style="width: 40rem;">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><h4><%= data[0].nama_tugas %></h4></li>
                  <li class="list-group-item"><a>Deskripsi : </a> <%= data[0].deskripsi %></li>
                  <li class="list-group-item"><a>Deadline : </a> <%= data[0].deadline %></li>
                </ul>
              </div>
            </div>
          </div>
          <!--/ Basic Bootstrap Table -->
        </div>
      </div>
      <!-- Right Section -->
      <div class="col-md-6">
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Upload Tugas</h5>
          </div>
          <div class="card-body formUpload">
            <form action="/pengumpulan/store" method="POST" enctype="multipart/form-data">
              <div hidden class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Nama Tugas</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" name="id_tugas" id="id_tugas" value="<%= data[0].id_tugas %>" />
                </div>
              </div>
              <div hidden class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Nama Users</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" name="id_users" id="id_users" value="<%= id_users %>" />
                </div>
              </div>
              <div hidden class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">Upload Time</label>
                <div class="col-sm-10">
                  <input type="time" class="form-control" name="upload_time" id="upload_time" placeholder="upload_time" />
                </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label" for="basic-default-name">File</label>
                <div class="col-sm-10">
                  <input type="file" class="form-control" name="file_tugas" id="file_tugas" placeholder="file_tugas" />
                </div>
              </div>
              <div class="row justify-content-end">
                <div class="col-sm-10">
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!--/ Parent Row -->

  </div>
  <% include('../partials/_foot.ejs') %>
