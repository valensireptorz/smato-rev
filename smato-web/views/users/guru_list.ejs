<!-- Custom CSS -->
<style>
  :root {
    --primary-color: #3c6e71;
    --secondary-color: #284b63;
    --accent-color: #f5a82e;
    --light-color: #f4f4f9;
    --dark-color: #353535;
    --success-color: #2ea84f;
    --danger-color: #e63946;
    --info-color: #457b9d;
  }
  
  body {
    background-color: #f5f7fa;
    font-family: 'Poppins', sans-serif;
    color: var(--dark-color);
  }
  
  .dashboard-header {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    padding: 40px 0;
    margin-bottom: 30px;
    color: white;
    border-radius: 0 0 15px 15px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    position: relative;
    overflow: hidden;
  }
  
  .dashboard-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 200%;
    background: rgba(255,255,255,0.1);
    transform: rotate(30deg);
  }
  
  .dashboard-title {
    font-weight: 700;
    font-size: 32px;
    margin-bottom: 10px;
    position: relative;
  }
  
  .dashboard-subtitle {
    font-weight: 400;
    opacity: 0.9;
    margin-bottom: 20px;
  }
  
  .breadcrumb {
    background: transparent;
    padding-left: 0;
    margin-bottom: 0;
  }
  
  .breadcrumb-item a {
    color: rgba(255,255,255,0.8);
    text-decoration: none;
  }
  
  .breadcrumb-item.active {
    color: rgba(255,255,255,0.6);
  }
  
  .breadcrumb-item+.breadcrumb-item::before {
    color: rgba(255,255,255,0.6);
  }
  
  .content-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 15px rgba(0,0,0,0.05);
    padding: 25px;
    margin-bottom: 30px;
    border-top: 5px solid var(--primary-color);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .content-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid #eaedf1;
  }
  
  .card-title {
    font-weight: 600;
    font-size: 18px;
    margin-bottom: 0;
    color: var(--primary-color);
    display: flex;
    align-items: center;
  }
  
  .card-title i {
    margin-right: 10px;
    color: var(--accent-color);
  }
  
  .btn-custom {
    padding: 8px 16px;
    border-radius: 50px;
    font-weight: 500;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }
  
  .btn-custom i {
    font-size: 16px;
  }
  
  .btn-primary {
    background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
    border: none;
    box-shadow: 0 4px 10px rgba(60, 110, 113, 0.3);
  }
  
  .btn-primary:hover {
    background: linear-gradient(to right, var(--secondary-color), var(--primary-color));
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(60, 110, 113, 0.4);
  }
  
  .alert {
    border-radius: 10px;
    border-left: 5px solid;
    padding: 15px 20px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
  }
  
  .alert i {
    font-size: 24px;
    margin-right: 15px;
  }
  
  .alert-success {
    border-left-color: var(--success-color);
    background-color: rgba(46, 168, 79, 0.1);
    color: var(--success-color);
  }
  
  .alert-danger {
    border-left-color: var(--danger-color);
    background-color: rgba(230, 57, 70, 0.1);
    color: var(--danger-color);
  }
  
  .alert-info {
    border-left-color: var(--info-color);
    background-color: rgba(69, 123, 157, 0.1);
    color: var(--info-color);
  }
  
  .custom-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    margin-bottom: 0;
  }
  
  .custom-table thead th {
    background-color: rgba(60, 110, 113, 0.05);
    color: var(--secondary-color);
    font-weight: 600;
    text-transform: uppercase;
    font-size: 12px;
    letter-spacing: 0.5px;
    padding: 15px;
    border: none;
    border-bottom: 2px solid #eaedf1;
  }
  
  .custom-table tbody tr {
    transition: all 0.2s ease;
  }
  
  .custom-table tbody tr:hover {
    background-color: rgba(245, 168, 46, 0.05);
  }
  
  .custom-table tbody td {
    padding: 15px;
    vertical-align: middle;
    border: none;
    border-bottom: 1px solid #eaedf1;
    color: #555;
    font-size: 14px;
  }
  
  .custom-table tbody tr:last-child td {
    border-bottom: none;
  }
  
  .badge {
    padding: 6px 12px;
    border-radius: 50px;
    font-weight: 500;
    font-size: 12px;
    letter-spacing: 0.5px;
  }
  
  .badge-admin {
    background-color: rgba(230, 57, 70, 0.1);
    color: #e63946;
  }
  
  .badge-guru {
    background-color: rgba(60, 110, 113, 0.1);
    color: var(--primary-color);
  }
  
  .badge-siswa {
    background-color: rgba(69, 123, 157, 0.1);
    color: var(--info-color);
  }
  
  .user-img {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 10px;
    border: 3px solid white;
    box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
  }
  
  .user-img:hover {
    transform: scale(1.05);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
  }
  
  .no-img-placeholder {
    width: 60px;
    height: 60px;
    border-radius: 10px;
    background-color: #f1f3f5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #adb5bd;
    font-size: 20px;
  }
  
  .guru-info {
    display: flex;
    flex-direction: column;
  }
  
  .info-badge {
    display: inline-flex;
    align-items: center;
    background-color: rgba(245, 168, 46, 0.1);
    color: var(--accent-color);
    padding: 5px 10px;
    border-radius: 50px;
    font-size: 12px;
    margin-top: 5px;
  }
  
  .info-badge i {
    margin-right: 5px;
    font-size: 12px;
  }
  
  .stats-container {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
  }
  
  .stat-card {
    background: white;
    border-radius: 12px;
    padding: 20px;
    flex: 1;
    display: flex;
    align-items: center;
    box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
    border-bottom: 3px solid transparent;
  }
  
  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 15px rgba(0,0,0,0.1);
  }
  
  .stat-card:nth-child(1) {
    border-bottom-color: var(--primary-color);
  }
  
  .stat-card:nth-child(2) {
    border-bottom-color: var(--secondary-color);
  }
  
  .stat-card:nth-child(3) {
    border-bottom-color: var(--accent-color);
  }
  
  .stat-icon {
    width: 50px;
    height: 50px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 15px;
    font-size: 24px;
  }
  
  .stat-icon.blue {
    background-color: rgba(60, 110, 113, 0.1);
    color: var(--primary-color);
  }
  
  .stat-icon.green {
    background-color: rgba(46, 168, 79, 0.1);
    color: var(--success-color);
  }
  
  .stat-icon.orange {
    background-color: rgba(245, 168, 46, 0.1);
    color: var(--accent-color);
  }
  
  .stat-info h3 {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 0;
  }
  
  .stat-info p {
    font-size: 14px;
    color: #6c757d;
    margin-bottom: 0;
  }
  
  .empty-state {
    padding: 50px 20px;
    text-align: center;
  }
  
  .empty-state img {
    width: 150px;
    margin-bottom: 20px;
    opacity: 0.7;
  }
  
  .empty-state h4 {
    font-weight: 600;
    color: var(--secondary-color);
    margin-bottom: 10px;
  }
  
  .empty-state p {
    color: #6c757d;
    max-width: 500px;
    margin: 0 auto 20px;
  }
  
  .search-toolbar {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
  }
  
  .search-input {
    flex-grow: 1;
    position: relative;
  }
  
  .search-input input {
    width: 100%;
    padding: 10px 15px 10px 40px;
    border-radius: 8px;
    border: 1px solid #e2e8f0;
    background-color: white;
    transition: all 0.3s ease;
  }
  
  .search-input input:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(60, 110, 113, 0.2);
    outline: none;
  }
  
  .search-input i {
    position: absolute;
    left: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: #adb5bd;
  }
  
  .filter-dropdown select {
    height: 42px;
    border-radius: 8px;
    border: 1px solid #e2e8f0;
    padding: 0 15px;
    background-color: white;
    color: #495057;
    cursor: pointer;
  }
  
  .filter-dropdown select:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(60, 110, 113, 0.2);
    outline: none;
  }
  
  .ellipsis-dropdown {
    position: relative;
    display: inline-block;
  }
  
  .ellipsis-btn {
    background: none;
    border: none;
    color: #6c757d;
    font-size: 18px;
    cursor: pointer;
    padding: 5px 10px;
    border-radius: 5px;
    transition: all 0.2s ease;
  }
  
  .ellipsis-btn:hover {
    background-color: #f1f3f5;
    color: var(--primary-color);
  }
  
  .dropdown-menu {
    min-width: 180px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    border: none;
    border-radius: 8px;
    padding: 10px 0;
  }
  
  .dropdown-item {
    padding: 8px 20px;
    color: #495057;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  
  .dropdown-item:hover {
    background-color: rgba(60, 110, 113, 0.05);
    color: var(--primary-color);
  }
  
  .dropdown-item i {
    font-size: 16px;
    width: 20px;
    text-align: center;
  }
  
  /* Animations */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .fade-in {
    animation: fadeIn 0.5s ease forwards;
  }
  
  .delay-1 { animation-delay: 0.1s; }
  .delay-2 { animation-delay: 0.2s; }
  .delay-3 { animation-delay: 0.3s; }
  
  @media (max-width: 992px) {
    .stats-container {
      flex-direction: column;
      gap: 15px;
    }
    
    .content-card {
      padding: 20px 15px;
    }
    
    .dashboard-header {
      padding: 30px 0;
    }
  }
  
  @media (max-width: 768px) {
    .search-toolbar {
      flex-direction: column;
    }
    
    .card-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }
    
    .custom-table {
      font-size: 13px;
    }
  }
</style>

<%- include('../partials/_nav.ejs') %>

<div class="dashboard-header fade-in">
  <div class="container">
    <h1 class="dashboard-title"><%= title %></h1>
    <p class="dashboard-subtitle">Kelola akun guru dan lihat informasi lengkap</p>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/"><i class="fas fa-home"></i> Beranda</a></li>
        <li class="breadcrumb-item active" aria-current="page">Akun Guru</li>
      </ol>
    </nav>
  </div>
</div>

<div class="container">
  <!-- Stats Cards -->
  <div class="stats-container fade-in delay-1">
    <div class="stat-card">
      <div class="stat-icon blue">
        <i class="fas fa-user-tie"></i>
      </div>
      <div class="stat-info">
        <h3><%= users.length %></h3>
        <p>Total Guru</p>
      </div>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon green">
        <i class="fas fa-chalkboard-teacher"></i>
      </div>
      <div class="stat-info">
        <h3><%= users.filter(user => user.level_users === 'guru').length %></h3>
        <p>Guru Aktif</p>
      </div>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon orange">
        <i class="fas fa-book"></i>
      </div>
      <div class="stat-info">
        <h3><%= [...new Set(users.map(user => user.id_mapel))].filter(Boolean).length %></h3>
        <p>Mata Pelajaran</p>
      </div>
    </div>
  </div>

  <div class="content-card fade-in delay-2">
    <div class="card-header">
      <h5 class="card-title"><i class="fas fa-user-shield"></i> Daftar Akun Guru</h5>
      
      <div class="d-flex gap-2">
        <% if (level == "admin") { %>
          <a href="/create" class="btn btn-custom btn-primary">
            <i class="fas fa-plus-circle"></i> Tambah Akun Guru
          </a>
        <% } %>
        
        <div class="dropdown">
          <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="exportDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-download"></i> Export
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="exportDropdown">
            <a class="dropdown-item" href="#"><i class="far fa-file-excel"></i> Excel</a>
            <a class="dropdown-item" href="#"><i class="far fa-file-pdf"></i> PDF</a>
            <a class="dropdown-item" href="#"><i class="far fa-file-csv"></i> CSV</a>
          </div>
        </div>
      </div>
    </div>
    
    <% if (messages && messages.success) { %>
      <div class="alert alert-success fade-in">
        <i class="fas fa-check-circle"></i>
        <div><%= messages.success %></div>
      </div>
    <% } %>
    
    <% if (messages && messages.error) { %>
      <div class="alert alert-danger fade-in">
        <i class="fas fa-exclamation-circle"></i>
        <div><%= messages.error %></div>
      </div>
    <% } %>
    
    <div class="search-toolbar">
      <div class="search-input">
        <i class="fas fa-search"></i>
        <input type="text" id="searchInput" placeholder="Cari guru..." class="form-control">
      </div>
      
      <div class="filter-dropdown">
        <select class="form-control" id="filterLevel">
          <option value="">Semua Level</option>
          <option value="admin">Admin</option>
          <option value="guru">Guru</option>
        </select>
      </div>
    </div>
    
    <% if (users.length === 0) { %>
      <div class="empty-state">
        <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" alt="No Data">
        <h4>Belum Ada Data Guru</h4>
        <p>Belum ada akun guru yang terdaftar dalam sistem. Mulai tambahkan akun guru untuk mengelola tenaga pengajar.</p>
        <% if (level == "admin") { %>
          <a href="/create" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Tambah Akun Guru Sekarang
          </a>
        <% } %>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table custom-table" id="guruTable">
          <thead>
            <tr>
              <th width="5%">#</th>
              <th width="25%">Identitas</th>
              <th width="15%">Level</th>
              <th width="15%">Foto</th>
              <th width="20%">Kelas & Mata Pelajaran</th>
              <th width="20%">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user, index) => { %>
              <tr class="fade-in" style="animation-delay: <%= 0.05 * index %>s;">
                <td><%= index + 1 %></td>
                
                <td>
                  <div class="d-flex align-items-center">
                    <div class="ms-3">
                      <h6 class="mb-1"><%= user.username %></h6>
                      <span class="text-muted small">ID: <%= user.id || '—' %></span>
                    </div>
                  </div>
                </td>
                
                <td>
                  <% if(user.level_users === 'admin') { %>
                    <span class="badge badge-admin"><i class="fas fa-user-shield"></i> Admin</span>
                  <% } else if(user.level_users === 'guru') { %>
                    <span class="badge badge-guru"><i class="fas fa-chalkboard-teacher"></i> Guru</span>
                  <% } else { %>
                    <span class="badge badge-siswa"><i class="fas fa-user-graduate"></i> <%= user.level_users %></span>
                  <% } %>
                </td>
                
                <td>
                  <% if (user.foto_users) { %>
                    <img src="/images/upload/<%= user.foto_users %>" alt="Foto <%= user.username %>" class="user-img">
                  <% } else { %>
                    <div class="no-img-placeholder">
                      <i class="fas fa-user"></i>
                    </div>
                  <% } %>
                </td>
                
                <td>
                  <div class="guru-info">
                    <% if (user.id_guru) { %>
                      <span class="info-badge">
                        <i class="fas fa-chalkboard"></i> Kelas: <%= user.id_guru %>
                      </span>
                    <% } else { %>
                      <span class="info-badge" style="background-color: rgba(108, 117, 125, 0.1); color: #6c757d;">
                        <i class="fas fa-chalkboard"></i> Belum ada kelas
                      </span>
                    <% } %>
                    
                    <% if (user.id_mapel) { %>
                      <span class="info-badge">
                        <i class="fas fa-book"></i> Mapel: <%= user.id_mapel %>
                      </span>
                    <% } else { %>
                      <span class="info-badge" style="background-color: rgba(108, 117, 125, 0.1); color: #6c757d;">
                        <i class="fas fa-book"></i> Belum ada mapel
                      </span>
                    <% } %>
                  </div>
                </td>
                
                <td>
                  <div class="ellipsis-dropdown">
                    <button class="ellipsis-btn" type="button" id="dropdownMenu<%= index %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu<%= index %>">
                      <a class="dropdown-item" href="/detail/<%= user.id %>">
                        <i class="fas fa-eye"></i> Lihat Detail
                      </a>
                      <% if (level == "admin") { %>
                        <a class="dropdown-item" href="/edit/<%= user.id %>">
                          <i class="fas fa-edit"></i> Edit
                        </a>
                        <a class="dropdown-item text-danger" href="/delete/<%= user.id %>" onclick="return confirm('Anda yakin ingin menghapus akun ini?')">
                          <i class="fas fa-trash-alt"></i> Hapus
                        </a>
                      <% } %>
                      <a class="dropdown-item" href="/print/<%= user.id %>" target="_blank">
                        <i class="fas fa-print"></i> Cetak Data
                      </a>
                    </div>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      <div class="d-flex justify-content-between align-items-center mt-4">
        <div class="small text-muted">
          Menampilkan <%= users.length %> dari <%= users.length %> akun guru
        </div>
        
        <nav aria-label="Page navigation">
          <ul class="pagination">
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                <i class="fas fa-chevron-left small"></i>
              </a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item disabled">
              <a class="page-link" href="#">
                <i class="fas fa-chevron-right small"></i>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    <% } %>
  </div>
</div>

<!-- JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Search functionality
  const searchInput = document.getElementById('searchInput');
  const filterLevel = document.getElementById('filterLevel');
  const table = document.getElementById('guruTable');
  
  if (searchInput && table) {
    searchInput.addEventListener('keyup', filterTable);
  }
  
  if (filterLevel && table) {
    filterLevel.addEventListener('change', filterTable);
  }
  
  function filterTable() {
    const searchValue = searchInput ? searchInput.value.toLowerCase() : '';
    const levelValue = filterLevel ? filterLevel.value.toLowerCase() : '';
    
    const rows = table.querySelectorAll('tbody tr');
    
    rows.forEach(row => {
      const username = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
      const level = row.querySelector('td:nth-child(3)').textContent.toLowerCase();
      
      const matchesSearch = username.includes(searchValue);
      const matchesLevel = levelValue === '' || level.includes(levelValue);
      
      if (matchesSearch && matchesLevel) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  }
  
  // Add animation class to elements
  const elementsToAnimate = document.querySelectorAll('.content-card, .alert');
  elementsToAnimate.forEach((element, index) => {
    element.classList.add('fade-in');
    element.style.animationDelay = `${0.1 * (index + 3)}s`;
  });
});
</script>

