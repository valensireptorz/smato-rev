<!-- Custom CSS for enhanced UI - Retained from original -->
<style>
  :root {
    --primary: #4361ee;
    --secondary: #3f37c9;
    --success: #4cc9f0;
    --info: #4895ef;
    --warning: #f72585;
    --danger: #e63946;
    --light: #f8f9fa;
    --dark: #212529;
    --gray-100: #f8f9fa;
    --gray-200: #e9ecef;
    --gray-300: #dee2e6;
    --gray-800: #343a40;
  }
  
  body {
    background-color: #f5f7fa;
    font-family: 'Poppins', sans-serif;
  }
  
  .page-header {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    color: white;
    padding: 2rem 0;
    margin-bottom: 2rem;
    border-radius: 0 0 10px 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }
  
  .card {
    border-radius: 10px;
    border: none;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
  }
  
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  .card-header {
    background-color: var(--gray-100);
    border-bottom: 1px solid var(--gray-200);
    padding: 1rem 1.5rem;
  }
  
  .table {
    margin-bottom: 0;
  }
  
  .table th {
    border-top: none;
    font-weight: 600;
    color: var(--gray-800);
    text-transform: uppercase;
    font-size: 0.8rem;
    letter-spacing: 0.5px;
  }
  
  .subject-selector {
    position: relative;
    background: white;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    margin-bottom: 2rem;
    padding: 1.5rem;
  }
  
  .subject-selector .dropdown-toggle {
    background: var(--primary);
    border: none;
    border-radius: 5px;
    padding: 0.7rem 1.5rem;
    font-weight: 500;
  }
  
  .subject-selector .dropdown-toggle:hover,
  .subject-selector .dropdown-toggle:focus {
    background: var(--secondary);
  }
  
  .subject-info {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--gray-100);
    border-radius: 5px;
    font-weight: 500;
    color: var(--gray-800);
  }
  
  .btn-add-task {
    background: var(--success);
    border: none;
    border-radius: 5px;
    padding: 0.7rem 1.5rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }
  
  .btn-add-task:hover {
    background: #38b6ff;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(76, 201, 240, 0.3);
  }
  
  .task-card {
    margin-bottom: 1.5rem;
    border-left: 5px solid var(--primary);
  }
  
  .task-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .deadline {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }
  
  .deadline.upcoming {
    background-color: #fdf6b2;
    color: #92400e;
  }
  
  .deadline.near {
    background-color: #fdba74;
    color: #9a3412;
  }
  
  .deadline.past {
    background-color: #fca5a5;
    color: #b91c1c;
  }
  
  .task-actions .btn {
    border-radius: 5px;
    font-size: 0.85rem;
    padding: 0.4rem 0.8rem;
  }
  
  .empty-state {
    text-align: center;
    padding: 3rem 0;
    color: var(--gray-800);
  }
  
  .empty-state i {
    font-size: 3rem;
    color: var(--gray-300);
    margin-bottom: 1.5rem;
  }
  
  .badge-kelas {
    background-color: var(--info);
    color: white;
    font-weight: normal;
    padding: 0.4rem 0.8rem;
    border-radius: 5px;
  }
  
  .task-description {
    color: #6c757d;
    font-size: 0.9rem;
    line-height: 1.5;
    margin-top: 0.75rem;
  }
  
  .teacher-info {
    display: flex;
    align-items: center;
    margin-top: 1rem;
  }
  
  .teacher-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: var(--primary);
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 0.8rem;
    margin-right: 0.75rem;
  }
  
  /* New style for filter card */
  .filter-card {
    border-radius: 10px;
    margin-bottom: 1.5rem;
    background-color: white;
    padding: 1.5rem;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
  }
  
  .filter-indicator {
    background-color: rgba(var(--bs-primary-rgb), 0.1);
    border-left: 4px solid var(--primary);
    padding: 12px 15px;
    border-radius: 6px;
    color: var(--bs-dark);
    font-size: 14px;
    margin-bottom: 1.5rem;
    animation: fadeIn 0.5s ease;
  }
  
  /* Animations */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animated-item {
    animation: fadeIn 0.5s ease forwards;
  }
  
  .page-header .container, .subject-selector, .task-card, .filter-card {
    opacity: 0;
    animation: fadeIn 0.5s ease forwards;
  }
  
  .subject-selector {
    animation-delay: 0.1s;
  }
  
  .filter-card {
    animation-delay: 0.05s;
  }
  
  .task-card {
    animation-delay: calc(0.1s * var(--index, 1));
  }
</style>

